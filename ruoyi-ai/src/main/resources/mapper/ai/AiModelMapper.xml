<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ai.mapper.AiModelMapper">

    <resultMap type="com.ruoyi.ai.domain.AiModel" id="AiModelResult">
        <result property="id"    column="id"    />
        <result property="modelName"    column="model_name"    />
        <result property="modelType"    column="model_type"    />
        <result property="modelConfig"    column="model_config"    />
        <result property="apiKey"    column="api_key"    />
        <result property="baseUrl"    column="base_url"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectAiModelVo">
        select id, model_name, model_type, model_config, api_key, base_url, status, create_by, create_time, update_time from ai_model
    </sql>

    <select id="selectAiModelList" parameterType="com.ruoyi.ai.domain.AiModel" resultMap="AiModelResult">
        <include refid="selectAiModelVo"/>
        <where>
            <if test="modelName != null  and modelName != ''"> and model_name like concat('%', #{modelName}, '%')</if>
            <if test="modelType != null  and modelType != ''"> and model_type = #{modelType}</if>
            <if test="modelConfig != null  and modelConfig != ''"> and model_config = #{modelConfig}</if>
            <if test="apiKey != null  and apiKey != ''"> and api_key = #{apiKey}</if>
            <if test="baseUrl != null  and baseUrl != ''"> and base_url = #{baseUrl}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createBy != null and createBy != ''"> and create_by like concat('%', #{createBy}, '%')</if>
        </where>
    </select>

    <select id="selectAiModelById" parameterType="Long" resultMap="AiModelResult">
        <include refid="selectAiModelVo"/>
        where id = #{id}
    </select>

    <insert id="insertAiModel" parameterType="com.ruoyi.ai.domain.AiModel" useGeneratedKeys="true" keyProperty="id">
        insert into ai_model
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="modelName != null and modelName != ''">model_name,</if>
            <if test="modelType != null and modelType != ''">model_type,</if>
            <if test="modelConfig != null and modelConfig != ''">model_config,</if>
            <if test="apiKey != null">api_key,</if>
            <if test="baseUrl != null">base_url,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="modelName != null and modelName != ''">#{modelName},</if>
            <if test="modelType != null and modelType != ''">#{modelType},</if>
            <if test="modelConfig != null and modelConfig != ''">#{modelConfig},</if>
            <if test="apiKey != null">#{apiKey},</if>
            <if test="baseUrl != null">#{baseUrl},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateAiModel" parameterType="com.ruoyi.ai.domain.AiModel">
        update ai_model
        <trim prefix="SET" suffixOverrides=",">
            <if test="modelName != null and modelName != ''">model_name = #{modelName},</if>
            <if test="modelType != null and modelType != ''">model_type = #{modelType},</if>
            <if test="modelConfig != null and modelConfig != ''">model_config = #{modelConfig},</if>
            <if test="apiKey != null">api_key = #{apiKey},</if>
            <if test="baseUrl != null">base_url = #{baseUrl},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAiModelById" parameterType="Long">
        delete from ai_model where id = #{id}
    </delete>

    <delete id="deleteAiModelByIds" parameterType="String">
        delete from ai_model where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>