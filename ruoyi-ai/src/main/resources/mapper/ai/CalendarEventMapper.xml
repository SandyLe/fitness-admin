<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ai.mapper.CalendarEventMapper">

    <resultMap type="com.ruoyi.ai.domain.CalendarEvent" id="CalendarEventResult">
        <result property="eventId"    column="event_id"    />
        <result property="title"    column="title"    />
        <result property="reminderTime"    column="reminder_time"    />
        <result property="description"    column="description"    />
        <result property="isReminder"    column="is_reminder"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCalendarEventVo">
        select event_id, title, reminder_time, description, is_reminder, status, create_by, create_time, update_by, update_time from ai_calendar_event
    </sql>

    <select id="selectCalendarEventList" parameterType="com.ruoyi.ai.domain.CalendarEvent" resultMap="CalendarEventResult">
        <include refid="selectCalendarEventVo"/>
        <where>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="reminderTime != null "> and reminder_time = #{reminderTime}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="isReminder != null  and isReminder != ''"> and is_reminder = #{isReminder}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
            <if test="params.curDate != null"> and DATE(reminder_time) = #{params.curDate}</if>
        </where>
    </select>

    <select id="selectCalendarEventByEventId" parameterType="Long" resultMap="CalendarEventResult">
        <include refid="selectCalendarEventVo"/>
        where event_id = #{eventId}
    </select>

    <insert id="insertCalendarEvent" parameterType="com.ruoyi.ai.domain.CalendarEvent" useGeneratedKeys="true" keyProperty="eventId">
        insert into ai_calendar_event
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="reminderTime != null">reminder_time,</if>
            <if test="description != null">description,</if>
            <if test="isReminder != null">is_reminder,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="reminderTime != null">#{reminderTime},</if>
            <if test="description != null">#{description},</if>
            <if test="isReminder != null">#{isReminder},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateCalendarEvent" parameterType="com.ruoyi.ai.domain.CalendarEvent">
        update ai_calendar_event
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="reminderTime != null">reminder_time = #{reminderTime},</if>
            <if test="description != null">description = #{description},</if>
            <if test="isReminder != null">is_reminder = #{isReminder},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where event_id = #{eventId}
    </update>

    <delete id="deleteCalendarEventByEventId" parameterType="Long">
        delete from ai_calendar_event where event_id = #{eventId}
    </delete>

    <delete id="deleteCalendarEventByEventIds" parameterType="String">
        delete from ai_calendar_event where event_id in
        <foreach item="eventId" collection="array" open="(" separator="," close=")">
            #{eventId}
        </foreach>
    </delete>
</mapper>