<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ai.mapper.AgentMapper">

    <resultMap type="com.ruoyi.ai.domain.Agent" id="AgentResult">
        <result property="id"    column="id"    />
        <result property="agentName"    column="agent_name"    />
        <result property="agentDescription"    column="agent_description"    />
        <result property="modelId"    column="model_id"    />
        <result property="knowledgeBaseIds"    column="knowledge_base_ids"    />
        <result property="userId"    column="user_id"    />
        <result property="systemPrompt"    column="system_prompt"    />
        <result property="temperature"    column="temperature"    />
        <result property="maxTokens"    column="max_tokens"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectAgentVo">
        select id, agent_name, agent_description, model_id, knowledge_base_ids, user_id, system_prompt, temperature, max_tokens, status, create_time, update_time from ai_agent
    </sql>

    <select id="selectAgentList" parameterType="com.ruoyi.ai.domain.Agent" resultMap="AgentResult">
        <include refid="selectAgentVo"/>
        <where>
            <if test="agentName != null  and agentName != ''"> and agent_name like concat('%', #{agentName}, '%')</if>
            <if test="agentDescription != null  and agentDescription != ''"> and agent_description = #{agentDescription}</if>
            <if test="modelId != null "> and model_id = #{modelId}</if>
            <if test="knowledgeBaseIds != null  and knowledgeBaseIds != ''">
                CONCAT(',', knowledge_base_ids, ',') LIKE CONCAT('%,', #{knowledgeBaseIds}, ',%')
            </if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="systemPrompt != null  and systemPrompt != ''"> and system_prompt = #{systemPrompt}</if>
            <if test="temperature != null "> and temperature = #{temperature}</if>
            <if test="maxTokens != null "> and max_tokens = #{maxTokens}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>

    <select id="selectAgentById" parameterType="Long" resultMap="AgentResult">
        <include refid="selectAgentVo"/>
        where id = #{id}
    </select>

    <insert id="insertAgent" parameterType="com.ruoyi.ai.domain.Agent" useGeneratedKeys="true" keyProperty="id">
        insert into ai_agent
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="agentName != null and agentName != ''">agent_name,</if>
            <if test="agentDescription != null">agent_description,</if>
            <if test="modelId != null">model_id,</if>
            <if test="knowledgeBaseIds != null">knowledge_base_ids,</if>
            <if test="userId != null">user_id,</if>
            <if test="systemPrompt != null">system_prompt,</if>
            <if test="temperature != null">temperature,</if>
            <if test="maxTokens != null">max_tokens,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="agentName != null and agentName != ''">#{agentName},</if>
            <if test="agentDescription != null">#{agentDescription},</if>
            <if test="modelId != null">#{modelId},</if>
            <if test="knowledgeBaseIds != null">#{knowledgeBaseIds},</if>
            <if test="userId != null">#{userId},</if>
            <if test="systemPrompt != null">#{systemPrompt},</if>
            <if test="temperature != null">#{temperature},</if>
            <if test="maxTokens != null">#{maxTokens},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateAgent" parameterType="com.ruoyi.ai.domain.Agent">
        update ai_agent
        <trim prefix="SET" suffixOverrides=",">
            <if test="agentName != null and agentName != ''">agent_name = #{agentName},</if>
            <if test="agentDescription != null">agent_description = #{agentDescription},</if>
            <if test="modelId != null">model_id = #{modelId},</if>
            <if test="knowledgeBaseIds != null">knowledge_base_ids = #{knowledgeBaseIds},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="systemPrompt != null">system_prompt = #{systemPrompt},</if>
            <if test="temperature != null">temperature = #{temperature},</if>
            <if test="maxTokens != null">max_tokens = #{maxTokens},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAgentById" parameterType="Long">
        delete from ai_agent where id = #{id}
    </delete>

    <delete id="deleteAgentByIds" parameterType="String">
        delete from ai_agent where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>